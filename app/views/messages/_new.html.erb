
<h2 class="follow_heading">New message</h2>


<%= form_tag user_messages_path(@user), method: :post do %>
  <div class="form-group">
    <%= text_field_tag 'message[subject]', nil, class: 'form-control', required: true, placeholder: 'Subject of message' %>
  </div>
 
  <div class="form-group">
    <%= text_area_tag 'message[body]', nil, cols: 6, class: 'form-control', required: true, placeholder: 'Write your message' %>
  </div>
 
  <%= submit_tag 'Send', class: 'btn btn-primary btn-block' %>
<% end %> 
