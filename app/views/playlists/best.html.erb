<div class="users_wrapper genres_index">
  <h2 class="heading">Spolisty Best Playlists</h2>
  <div class="row">
    <% @playlists.each do |p| %>
      <div class="col-md-3 col-sm-6">
        <div id="<%= p.name %>" class="user">
          <p class="user_info">
            <%= p.name %>
            <%= p.id %>
            <%= p.user.name %>
            <%#= link_to p.name, p, class: 'genre_link' %>
            <br />
            <%= p.rewiews.average(:rating).round(2) %>
            Based on <%= p.rewiews.count %> rewiews
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
