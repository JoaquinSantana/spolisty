<div class="playlist_wrapper">
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <%= image_tag @playlist.image, class: "img-responsive" %>
    </div>

    <div class="col-md-8">
      <p>PLAYLIST</p>
      <%= @playlist.name %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h3 class="createdby">Playlist created by: <%= @playlist.ownerlist %></h3>

      <table class="table table-hover">
        <thead>
          <tr>
            <td>Track Name</td>
            <td>Cos</td>
            <td>cos</td>
            <td>cos</td>
          </tr>
        </thead>
        <tbody>
          <% @playlist.tracks.each do |tr| %>
            <tr>
              <td><%= tr.name %></td>
              <td><%= tr.id %></td>
              <td><%= tr.created_at %></td>
              <td><%= tr.track_number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <% if current_user == @playlist.user %>
        <%= link_to "Destroy", user_playlist_path, method: :delete, data: { confirm: "are You sure?" }, class: 'btn btn-primary' %>
      <% end %>
      <%= link_to "Back", :back, class: 'btn btn-primary' %>
      
    </div>
  </div>  
</div>