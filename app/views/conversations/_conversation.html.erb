<li class="list-group-item clearfix">
  <%= link_to conversation.subject, user_conversation_path(current_user, :id => conversation.id) %>


  <div class="btn-group-vertical pull-right">
    <% if conversation.is_trashed?(current_user) %>
      <%= link_to 'Restore', restore_user_conversation_path(current_user, :id => conversation.id), class: 'btn btn-xs btn-info', method: :post %>
    <% else %>
      <%= link_to 'Move to trash', user_conversation_path(current_user, :id => conversation.id), class: 'btn btn-xs btn-danger', method: :delete,
                  data: {confirm: 'Are you sure?'} %>
    <% end %>
  </div>

  <p><%= conversation.last_message.body %>
  <small>(<span class="text-muted"><%= conversation.last_message.created_at.strftime("%-d %B %Y, %H:%M:%S") %></span>)</small></p>
</li>