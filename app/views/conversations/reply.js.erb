<% if @conversation.new_record? %>
  alert('Your comment cannot be saved.');
<% else %>
  $('#single_conversation').find('.messages').append("<%= j render partial: 'conversations/receipt', locals: { receipt: @receipt } %>");
  var n = $('.media').length;
  if (n > 5) {
    $('.media').first().remove();
  }
  $('textarea#body').val('');
<% end %>