<div class="col-md-12 user_wrapper clearfix">
  <div class="user_image">
    <%= link_to foto(user), user, data: { no_turbolink: true } %>
  </div>
  <div class="user_content">
    <h2 class="user_heading"><%= user.nick %></h2>
    <p><%= user.about %></p>

    <%#= truncate(user.about, length: 70) %>
  </div>
  <div class="user_delete">

    <% unless current_user?(user) %>
      <% if current_user.following?(user) %>

        <%= render 'shared/unfollow', :user => user %>
      <% else %>
        <%= render 'shared/follow' %>
      <% end %>
    <% end %>

  </div>
</div>
