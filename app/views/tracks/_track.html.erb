<li class="<%= track.genre.name %> col-md-12">
  <div class="track_image pull-left">
    <%= image_tag(track.album.image, size: '100x100') %>
  </div>
  <div class="track_name pull-left">
    <%= truncate(track.name, length: 45) %>
    
  </div>
  <div class="track_info">
    <%= track.try(:artist).try(:name) %>
    <%= track.try(:album).try(:name) %>
  </div>
  <div class="track_duration pull-right">
    <%= link_to [track.playlist.user, track.playlist, track: track],
      "data-toggle" => "tooltip",
      "data-placement" => "top",
      "title" => "Listen this track on his playlist" do %>
      <i class="fa fa-play">  </i>    
    <% end %>
    <%= track.try(:track_duration) %>
  </div>
</li>
